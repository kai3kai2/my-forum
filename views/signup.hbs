<div class="row mt-4">
  <div class="col-md-5 m-auto">
    <div
      class="card card-body shadow p-3 mb-5 bg-body"
      style="border-radius:35px;"
    >
      <h1 class="text-center nt-3">
        <i class="fa-solid fa-user-plus"></i>
        Register
      </h1>
      {{> messages}}

      <form action="/signup" method="POST" class="mx-3" onsubmit="return validateForm()">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <div class="my-3">
          <label for="name" class="mb-2" style="font-size: 1.2rem;">
            <i class="fa-solid fa-signature"></i>
            Name :
          </label>
          <input
            type="text"
            name="name"
            id="name"
            class="form-control"
            placeholder="Enter Your Name"
            value="{{name}}"
            required
          />
        </div>

        <div class="my-3">
          <label for="email" class="mb-2" style="font-size: 1.2rem;">
            <i class="fa-solid fa-envelope"></i>
            Email :
          </label>
          <input
            type="email"
            name="email"
            id="email"
            class="form-control"
            placeholder="Enter Email"
            value="{{email}}"
            required
          />
        </div>

        <div class="my-3">
          <label for="password" style="font-size: 1.2rem;">
            <iclass="fa-solid fa-lock"></i>
            Password:
          </label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            placeholder="Enter Password"
            required
          />
        </div>

        <div class="my-3">
          <label for="confirmPassword" style="font-size: 1.2rem;">
            <i class="fa-sharp fa-solid fa-check-double"></i>
            Confirm Password:
          </label>
          <input
            type="password"
            name="confirmPassword"
            id="confirmPassword"
            class="form-control"
            placeholder="Enter Again Password"
            required
          />
        </div>

        <div class="d-flex justify-content-center">
          <button
            type="submit"
            class="btn btn-primary col-md-6"
            style="border-radius:20px;"
          >
            <i class="fa-solid fa-check"></i>
            SIGN UP
          </button>
          <a href="/auth/google" class="btn btn-danger col-md-6"
            style="border-radius:20px;">Google Login</a>
        </div>
      </form>
      <p class="mt-3 d-flex justify-content-start" style="margin-bottom:0%">
        Have An Account ?
        <a href="/signin" class="mx-1">SignIn</a>
      </p>
    </div>
  </div>
</div>