<header>
  <nav class="navbar navbar-expand-lg fixed-top bg-light p-3" data-bs-theme="light">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">開心論壇</a>
      
      {{#if user}}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
          aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor03">
          <ul class="navbar-nav ms-auto mb-2 mb-md-0">
            <div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
              <ul class="navbar-nav">
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    分類目錄
                  </a>
                  <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                    <li class="nav-item">
                      <a class="nav-link {{#ifCond '' categoryId}}active{{/ifCond}}" href="?categoryId=">全部</a>
                     </li>
                     <li><hr class="dropdown-divider"></li>
                    {{#each categories}}
                      <li class="nav-item">
                        <a class="dropdown-item nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}"
                          href="?categoryId={{this.id}}">{{this.name}}</a>
                      </li>
                    {{/each}}
                  </ul>
                </li>
              </ul>
            </div>

            <li class="nav-item d-inline-flex align-items-center">
              <span class="text-black nav-link">Hi, {{ user.name }}</span>
            </li>
            {{#if user.isAdmin}}
              {{> restaurant-tabs route='users'}}
            {{/if}}
            <li class="nav-item">
              <a href="/logout"><button class="btn btn-outline-success my-sm-0 my-2">Logout</button></a>
            </li>
          </ul>
        </div>
      {{/if}}
    </div>
  </nav>
</header>