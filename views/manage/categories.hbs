<div class="container">
  <div class="row">
    <h1 class="d-flex justify-content-center">分類清單</h1>
    <span class="d-inline-block d-flex justify-content-center">
      {{#if category}}
        <div class="d-flex align-items-center pt-3 pb-4 my-2 text-white-50 bg-purple">
            <form class="row" action="/manage/categories/{{category.id}}?_method=PUT" method="POST">
              <div class="col-auto">
                <input class="form-control" type="text" name="name" id="address" placeholder="name" value="{{category.name}}">
              </div>
              <div class="col-auto">
                <button type="submit" class="btn btn-success col-md">update</button>
                <a class="btn btn-secondary" href="/manage/categories">Canel</a>
              </div>
            </form>
          </div>
        {{else}}
          <div class="d-flex align-items-center pt-3 pb-4 my-2 text-white-50 bg-purple">
            <form class="row" action="/manage/categories" method="POST">
              <div class="col-auto">
                <input class="form-control" type="text" name="name" id="address" placeholder="Category Name">
              </div>
              <div class="col-auto">
                <button type="submit" class="btn btn-primary col-md">Create</button>
              </div>
            </form>
          </div>
      {{/if}}
    </span>
  </div>
</div>
<div class="d-flex justify-content-center">
  <div class="table-responsive">
    <table class="table align-middle">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">種類名稱</th>
          <th scope="col">#</th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
          <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>
              <button type="button" class="btn btn-link">
                <a class="btn btn-success" href="/manage/categories/{{this.id}}">
                  Edit
                </a>
              </button>
              <form action="/manage/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm(`確定要刪除{{this.name}}嗎?`)">Delete</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
